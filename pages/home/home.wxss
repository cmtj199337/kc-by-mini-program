/* pages/home/home.wxss */
.swiper{
    width:100%;
    height: 380rpx;
}
.slide-image{
    width:100%;
    height: 100%;
}
.icon-menu {
  width: 100%;
  display: flex;
  padding: 36rpx 0 40rpx 0;
}
.menu-view {
  text-align: center;
  flex: 1;
}
.icon-img {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  background-color: #f4f4f4;
  border-radius: 50%;
}
.icon-text {
  display: block;
  font-size: 24rpx;
  color:#333;
  padding-top: 10rpx;
}
.recommend {
  height: 98rpx;
  line-height: 98rpx;
  display: block;
  font-size:32rpx;
  border-top: 20rpx solid #f4f4f4;
  padding: 0 30rpx;
  position: relative;
}
.more {
  float: right;
  font-size: 30rpx;
  color: #999;
  padding-right: 20rpx;
}
.article {
  display: -webkit-box;
  border-bottom: 1rpx solid #f4f4f4;
  padding: 24rpx 24rpx 24rpx 0;
  margin-left: 30rpx;
  box-sizing: border-box;
}
.article-content {
  float: none;
  width: 0;
  -webkit-box-flex: 1;
}
.article-content-left {
  padding-right: 20rpx;
  box-sizing: border-box;
}
.article-title {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: block;
  min-height: 106rpx;
  line-height: 1.8;
}
.article-img {
  background-color: #f4f4f4;
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.article-img .avatar {
  width: 100%;
  height: 100%;
}
.type-icon {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.info {
  margin-top: 20rpx;
}
.authorAvatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.count {
  font-size: 24rpx;
  color: #999;
}
.arrows {
  width: 52rpx;
  height: 52rpx;
  vertical-align: middle;
  position: absolute;
  right: 10rpx;
  top: 0;
  bottom: 0;
  margin: auto;
}