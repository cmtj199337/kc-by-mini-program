/* pages/activity/activitydetail/activitydetail.wxss */
.activitydetail{
  padding-bottom: 98rpx;
  font-family: '微软雅黑';
}
.activitydetail-logo{
  width: 100%;
  height: 340rpx;
}
.activitydetail-title{
  font-size: 36rpx;
  color: #333;
  padding: 30rpx;
}
.info-icon{
  height: 32rpx;
  width: 32rpx;
}
.info-host{
  border-bottom: 0!important;
}
.activitydetail-info{
  font-size: 32rpx;
  color: #333;
  border-bottom: 1px solid #e5e5e5;
padding: 25rpx 0 25rpx 0;
  margin-left: 30rpx;
}
.activity-take{
    font-size: 32rpx;
    padding: 20rpx 30rpx;
    border: 1px solid #e5e5e5;
}
.number-row{
 display: inline-flex;
 justify-content: space-between;
 width: 100%;
 padding:30rpx;
 box-sizing: border-box;
}
.number-img{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  box-sizing: border-box;
}
.activitydetail-content{}

.activitydetail-btn{
  height: 98rpx;
  width: 100%;
  line-height: 98rpx;
  color: white;
  text-align: center;
  position: fixed;
  bottom: 0;
}
