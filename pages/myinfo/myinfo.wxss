.wrap {
  background: #f4f4f4;
}
.avator {
  background: #fff;
  margin-bottom: 20rpx; 
  display: flex;
  padding: 30rpx;
  justify-content: space-between;
}
.avator text {
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
}
.avator image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.info {
  background: #fff;
}
.section {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f4f4f4;
  font-size: 32rpx;
  padding: 30rpx 20rpx 30rpx 0;
  margin-left: 30rpx;
}
.sectionPlus {
  font-size: 32rpx;
  color: #333;
  margin-left: 30rpx;
  padding-top: 30rpx;
}
.section :last-child {
  border-bottom: none;
}
.section text {
  color: #333;
}
.section input {
  text-align: right;
}
.perfect {
  background: #fff;
  margin-top: 20rpx;
}
.submit {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
.btn {
  width: 92%;
  background: #ff5a5f;
  color: #fff;
  margin-top: 30rpx;
}