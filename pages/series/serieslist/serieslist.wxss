.article {
  display: -webkit-box;
  border-bottom: .5px solid #f4f4f4;
  padding: 24rpx 24rpx 24rpx 0;
  margin-left: 30rpx;
  box-sizing: border-box;
}
.article-content {
  float: none;
  width: 0;
  -webkit-box-flex: 1;
}
.article-content-left {
  padding-right: 20rpx;
  box-sizing: border-box;
}
.article-title {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  -webkit-box-orient: vertical;
  overflow: hidden;
  display: block;
  line-height: 1.8;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.article-tip {
  font-size:24rpx;
  color:#999;
}
.article-img {
  background-color: #f4f4f4;
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.article-img image {
  width: 100%;
  height: 100%;
}
.info {
  margin-top: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.authorAvatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.count {
  font-size: 24rpx;
  color: #999;
}