.video {width: 100%;height: 424rpx;display: block;}
.nav{height:88rpx;display:flex;flex-direction:row;border-bottom: 1px solid #e5e5e5;}
.default{line-height:88rpx;text-align:center;flex:1;font-size:32rpx;color:#666;}
.default text {
  width: 200rpx;
  height: 88rpx;
  display: block;
  margin: 0 auto;
}
.red{line-height:88rpx;text-align:center;color:#ff5a5f;flex:1;font-size:32rpx;}
.red text {
  width: 180rpx;
  height: 88rpx;
  display: block;
  margin: 0 auto;
  border-bottom: 1px solid #ff5a5f;
}
.show{
  display:block;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
}
.hidden{display:none}
.back-list {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}
 .back-list:last-child {
  border-bottom: 0;
} 
.back-list image {
  width: 48rpx;
  height: 32rpx;
  vertical-align: middle;
}
.live-list {
  font-size: 32rpx;
  color: #333;
  padding-left: 20rpx;
}
.wxParse-p {
  font-size: 32rpx;
  color: #333;
  line-height: 54rpx;
  padding-bottom: 20rpx;
}
.wxParse-p:first-child {
  margin-top: 30rpx; 
}
.current {
